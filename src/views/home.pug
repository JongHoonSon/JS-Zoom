doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        title Noom
    body 
        header
            h1 Noom 
        main
            div#welcome 
                form
                    input(placeholder="room name", required, type="text")
                    button Enter room
            div#call
                div#stream_section
                    div#myStream
                        video#myFace(autoplay, playsinline, width="1080", height="720")
                        div#buttons
                            button#mute Mute
                            button#camera Turn Camera Off
                            select#cameras
                    div#peerStream
                        video#peerFace(autoplay, playsinline, width="1080", height="720")
                div#chat_section
                    form#chat_form
                        input(placeholder="Write your message", required, text="text")
                        button Send Message
                    ul#chat_list
                
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")