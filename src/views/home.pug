doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/public/css/styles.css")
        title Noom
    body 
        header
            h1#title Noom 
        main
            div#welcome
                form#room_form
                    input(placeholder="Room Name", required, type="text")
                    button Enter room
            div#call
                div#stream_section
                    div#peerStream
                        video#peerFace(autoplay, playsinline, width="480", height="320")
                    div#myStream
                        video#myFace(autoplay, playsinline, width="480", height="320")
                    div#buttons
                        button#mute Mute
                        button#camera Turn Camera Off
                        select#cameras
                div#chat_section
                    ul#chat_list
                    form#chat_form
                        input(placeholder="Write your message", required, text="text")
                        button Send Message
                
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")